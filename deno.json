{
  "tasks": {
    "start": "deno run -A main.js"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@^4.4.12",
    "@std/dotenv": "jsr:@std/dotenv@^0.224.0"
  },
  "lint": {
    "include": ["*.ts", "*.js"],
    "rules": {
      "tags": ["recommended"],
      "include": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["*.ts", "*.js"]
  }
}
